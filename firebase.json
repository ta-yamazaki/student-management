{
  "hosting": {
    "public": "front",
    "rewrites": [
      {
        "source": "api/**",
        "function": "app"
      }, {
        "source": "**",
        "destination": "front/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "ui": {
      "port": "4000",
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": "5000",
      "host": "0.0.0.0"
    },
    "functions": {
      "port": "5001",
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": "8080",
      "host": "0.0.0.0"
    }
  }
}
